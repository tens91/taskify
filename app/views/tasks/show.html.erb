<h1><%= @task.title %></h1>

<p><%= @task.body %></p>


<ul>
    <li> <%= link_to "Edit this task", edit_task_path(@task) %> </li>
    <li> <%= link_to "Delete this task", task_path(@task),
                                        method: :delete,
                                        data: {confirm: "Are you sure?" } %> </li>
</ul>